/* pages/list/list.wxss */
.container {
    padding: 10px;
}
.info {
    box-sizing: border-box;
    width: 100%;
    height: 161px;
    border: 1px solid #ededed;
    margin-top: 10px;
}
.movie-img{
    float: left;
    width: 130px;
    height: 160px;
}
.movie-img image{
    display: block;
    width: 100%;
    height: 100%;
}
.movie-info {
    float: left;
    width: 130px;
    height: 100%;
    margin-left: 15px;
}
.movie-info text{
    display: block;
    font-size: 11px;
    margin-top: 5px;
}
.movie-info text:nth-of-type(1){
    margin: 0;
}